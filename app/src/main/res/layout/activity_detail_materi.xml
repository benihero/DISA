<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bluePrimary"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".tambahanmateri.DetailMateri">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/materitam"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                android:paddingStart="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/chapaza"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/pengertiantunanetra"
                android:layout_height="wrap_content"

                />


            <ImageView
                android:id="@+id/pototam"
                android:layout_marginTop="30dp"
                android:layout_width="400dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/madiftunet"
                android:layout_height="200dp"
                />

            <TextView

                android:id="@+id/isitam"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="28dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/afega"
                android:background="@color/GrayPrimary"
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="@string/ParagrafsatuTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">



                <Button
                    android:layout_width="100dp"
                    android:background="@color/pinkmenu"
                    android:text="Kembali"
                    android:textAllCaps="false"
                    android:elevation="6dp"
                    android:textColor="@color/white"
                    android:layout_height="40dp"/>




            </LinearLayout>



















        </LinearLayout>





    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>