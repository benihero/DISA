<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrayPrimary"
    tools:context=".edit_profile">


    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/bluePrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_circle_picture"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pict_edit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_nopic"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />


    <Button

        android:id="@+id/add_profil_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/addprofil"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:background="@drawable/bg_primary_button"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view7"
        app:layout_constraintVertical_bias="0.498">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/newlin"
                android:gravity="center"
                android:text="Your Full Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/fullname_profile_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/bg_profile_card" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/newlin"
                android:gravity="center"
                android:text="NIM"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/nim_profile_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/bg_profile_card" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/newlin"
                android:gravity="center"
                android:text="Faculty"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/faculty_profile_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/bg_profile_card" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/newlin"
                android:gravity="center"
                android:text="Email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/email_profile_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/bg_profile_card" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/back_editprofil"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_back_button"
            android:elevation="4dp"
            android:layout_marginRight="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Back" />

        <Button
            android:id="@+id/save_edit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_start_button"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="Save" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>