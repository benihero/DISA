<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:elevation="6dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_marginTop="6dp"
        android:elevation="6dp"
        android:background="@color/GrayPrimary"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/potolistmateritambahan"
            android:background="@drawable/kursirodaorang"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <TextView
            android:id="@+id/judulmateritambah"
            android:text="Judul Materi Tambah"
            android:textSize="20dp"
            android:padding="5dp"
            android:fontFamily="@font/timeless"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/isimateritambah"
            android:text="ini merupakan sis materi tambahan"
            android:textSize="15dp"
            android:padding="5dp"
            android:fontFamily="@font/timeless"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/hapustambahan"
            android:layout_width="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/hapustambahan"
            android:layout_height="30dp"/>





    </LinearLayout>

</LinearLayout>