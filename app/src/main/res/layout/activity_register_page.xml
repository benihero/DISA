<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bluePrimary"
    android:layout_height="match_parent"
    tools:context=".Registerpage">


    <ImageView

        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logopsld2"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:lineSpacingExtra="3dp"
        android:fontFamily="@font/newlin"
        android:text="let's join us to further develop \ndisability awareness"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_login_primary"
        android:drawableLeft="@drawable/user_login"
        android:fontFamily="monospace"
        android:textColorHint="@color/GrayPrimary2"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Username"
        android:paddingStart="5dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />

    <EditText
        android:id="@+id/email"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/bg_login_primary"
        android:drawableLeft="@drawable/email"
        android:fontFamily="monospace"
        android:textColorHint="@color/GrayPrimary2"
        android:textColor="@color/colorPrimaryDark"
        android:hint="Email"
        android:paddingStart="5dp"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/password"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:textColorHint="@color/GrayPrimary2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_login_primary"
        android:drawableLeft="@drawable/password"
        android:fontFamily="monospace"
        android:hint="Password"
        android:paddingStart="5dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/sign_countinue"
        android:layout_width="274dp"
        android:layout_height="55dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_primary_button"
        android:fontFamily="@font/consola"
        android:text="Countinue"
        android:textAllCaps="false"
        android:textColor="@color/bluePrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>