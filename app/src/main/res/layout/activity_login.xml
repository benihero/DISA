<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluePrimary"
    tools:context=".loginActivity">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="4dp"
        android:src="@drawable/grouplogo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748" />

    <LinearLayout

        android:id="@+id/linearLayout3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@color/GrayPrimary"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="254dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_primary"
            android:elevation="5dp"
            android:hint="Username"
            android:textColorHint="@color/GrayPrimary2"
          >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/username_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_primary"
                android:hint="Username"
                android:paddingStart="6dp"
                android:textColor="@color/colorPrimaryDark" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="254dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_primary"
            android:elevation="5dp"
            android:hint="Password"
            android:textColorHint="@color/GrayPrimary2"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/GrayPrimary2">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_login_primary"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="6dp"
                android:textColor="@color/colorPrimaryDark" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button

        android:id="@+id/login_primary"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_login_primary"
        android:elevation="6dp"
        android:fontFamily="monospace"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/bluePrimary"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/forget_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:onClick="lupapasswordd"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Forget Password ?"
        android:textColor="@color/GrayPrimary2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>